  </head>
  <body>
    <div class="main">      
        <header>
            <div class="lang">{% spaceless %}
                {% if app.request.get('_locale') == "pl" %}<a href="{{ path(app.request.get('_route'),{'_locale':'en'}) }}"><img src="{{asset('bundles/mtuportfolio/images/flag_sm.png')}}" title="English version" alt="English version">
                    {% else %}
                    <a href="{{ path(app.request.get('_route'),{'_locale':'pl'}) }}">
                        <img src="{{asset('bundles/mtuportfolio/images/flagpl_sm.png')}}" title="polska wersja" alt="polska wersja">
                {% endif %}
            </a>
        </div>
        <div class="logo">
            <a href="{{ path('mtu_portfolio_index') }}"><img src="{{asset('bundles/mtuportfolio/images/b-logo.png')}}" alt="{% trans %}Freelance, aplikacje internetowe{% endtrans %}"></a></div>{% endspaceless %}
                
            <nav>
            <ul class="nav">{% spaceless %}
    {% for item in menu %}
            <li><a href="{{ path(item['route']) }}#">
        {% if app.request.get('_route') == item['route'] %}
            <span class="{{ item['class'] }} active">
        {% else %}
            <span class="{{ item['class'] }}">
            {% endif %}</span>{% if app.request.get('_locale') == "pl" %}{{ item['name'] }}{% else %}{{ item['nameEng'] }}{% endif %}</a></li>    
    {% endfor %}
</ul>{% endspaceless %}
            
            </nav>
        </header>
    </div>
        {% block content %}
        {% endblock %}
        {#<div class="assest">
            <span class="mov mover"></span>
            <div><h5>{% trans %}Oceń tę stronę{% endtrans %}</h5>
                <ul>
                    <li><span></span></li>
