<!DOCTYPE html>
<!--[if IE 8]>    <html class="lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html> <!--<![endif]-->  
    <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Logowanie - matrus.eu</title>
    <meta name="description" content="Formularz logowania">
    <link href="{{ asset('bundles/mtuportfolio/css/style.css') }}" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>    
      <div class="login_form" style="padding:10% 0 0">
        <div class="main" style="background:#fff;">      
            <header>
                <div class="logo" style="float:none !important">
                    <a href="{{ path('mtu_portfolio_index') }}">
                        <img style="margin:0 auto" src="{{asset('bundles/mtuportfolio/images/b-logo.png')}}" alt="{% trans %}Freelance, aplikacje internetowe{% endtrans %}"></a></div>
            </header>
        </div>

        {% if error %}
            <div>{{ error.message }}</div>
        {% endif %}

        <section>
            <div class="content">
                <form class="form" action="{{ path('login_check') }}" method="post">
                    <div class="group">
                        <label class="control-label" for="name">Username</label>
                        <div class="input"><input id="username" name="_username" value="{{ last_username }}" type="text"></div>
                        <span class="empty"></span>
                    </div>
                    <div class="group">
                        <label class="control-label" for="name">Password</label>
                        <div class="input"><input type="password" id="password" name="_password"></div>
                        <span class="empty"></span>
                    </div>    
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="group">
                        <div class="button_row">
                            <button type="submit" class="button">Login</button>
                        </div>
                        <span class="empty"></span>
                    </div>
                </form>
            </div>
        </section>
    </div>    
</body>
</html>